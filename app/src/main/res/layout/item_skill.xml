<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvSkillDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ivSkillPic"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Skill desc"/>
        <TextView
            android:id="@+id/tvSkillPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSkillDesc"
            android:layout_toLeftOf="@id/ivSkillPic"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:text="This is skill description"/>
        <ImageView
            android:id="@+id/ivSkillPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_panorama_grey_24dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>